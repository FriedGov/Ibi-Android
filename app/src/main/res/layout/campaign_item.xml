<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_campaignName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/campaignnamecontainer"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_campaignDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/campaigndatecontainer"
        android:textColor="#7F7F7F"
        android:textSize="16sp" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/pb_campaignProgress"
        android:progressDrawable="@drawable/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mpb_progressStyle="horizontal"
        app:mpb_progressTint="@color/colorPrimary"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"/>

</LinearLayout>